<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btn_open_portal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Portal" />

        <Button
            android:id="@+id/btn_show_portal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Portal" />

        <Button
            android:id="@+id/btn_hide_portal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide Portal" />

        <Button
            android:id="@+id/btn_close_portal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Portal" />

        <Button
            android:id="@+id/btn_send_portal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Portal" />

        <Button
            android:id="@+id/btn_send_if_portal_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send if portal open" />

        <EditText
            android:id="@+id/et_portlet_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Portlet id"
            android:text="10" />

        <Button
            android:id="@+id/btn_open_portlet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Portlet" />

        <Button
            android:id="@+id/btn_show_portlet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Portlet" />

        <Button
            android:id="@+id/btn_hide_portlet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide Portlet" />

        <Button
            android:id="@+id/btn_close_portlet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Portlet" />

        <Button
            android:id="@+id/btn_close_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close serviceClass" />

        <Button
            android:id="@+id/btn_send_portlet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Portlet" />

        <Button
            android:id="@+id/btn_send_to_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send to all" />

    </LinearLayout>
</ScrollView>